# Rails Development Environment Configuration
# Copy this file to .env.development and fill in your actual values

# Rails Environment
RAILS_ENV=development
NODE_ENV=development

# Secret Key (generate with: bundle exec rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# Encryption Secret (for Active Record encryption)
# IMPORTANT: Keep this consistent across deployments to decrypt existing data
ENCRYPTION_SECRET=your_encryption_secret_here

# Database Configuration - Using SQLite for simpler local development
# Database will be created at ./db.sqlite3
WORKDIR=.

# S3 Storage Configuration
S3_ATTACHMENTS_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# AWS Credentials
# Get these from AWS IAM console or your AWS administrator
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Active Storage
ACTIVE_STORAGE_PUBLIC=false

# Optional: Force SSL (set to false for local development)
FORCE_SSL=false

# SMTP Configuration (optional for local dev)
# Uncomment and configure if you need to test email sending
# SMTP_ADDRESS=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your_username
# SMTP_PASSWORD=your_password
# SMTP_FROM=noreply@example.com

# Redis URL for Sidekiq (background jobs)
# Make sure Redis is running locally: brew services start redis
REDIS_URL=redis://localhost:6379/0

# Optional: Application URL (for generating links in emails, etc.)
# APP_URL=http://localhost:3000
