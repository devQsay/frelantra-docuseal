# DocuSeal Environment Configuration
# This is a template file. Copy to .env and fill in your actual values.
# For local development, use .env.development.example instead.

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Rails Environment (production, staging, development)
RAILS_ENV=production
NODE_ENV=production

# Secret Key Base (generate with: bundle exec rails secret)
# CRITICAL: Keep this secret and consistent across deployments
SECRET_KEY_BASE=your_secret_key_base_here

# Encryption Secret (for Active Record encryption)
# CRITICAL: Keep this consistent across deployments to decrypt existing data
# Used for encrypting access tokens, API keys, and other sensitive data
ENCRYPTION_SECRET=your_encryption_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string for production
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# S3 Storage for file attachments
S3_ATTACHMENTS_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# AWS Credentials (use IAM role in production if possible)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Active Storage Configuration
ACTIVE_STORAGE_PUBLIC=false

# =============================================================================
# SECURITY
# =============================================================================

# Force SSL/HTTPS (recommended for production)
FORCE_SSL=true

# Application URL (used for generating links)
APP_URL=https://your-domain.com

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================

# SMTP settings for sending emails
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_FROM=noreply@example.com

# =============================================================================
# BACKGROUND JOBS
# =============================================================================

# Redis URL for Sidekiq background jobs
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# Multi-tenant mode
# MULTITENANT=false

# Demo mode
# DEMO=false

# Log level (debug, info, warn, error)
# LOG_LEVEL=info

# =============================================================================
# DEVELOPER NOTES
# =============================================================================
#
# Quick Start:
# 1. Copy this file to .env (or .env.development for local dev)
# 2. Fill in all required values marked with "your_" placeholders
# 3. Generate secrets with: bundle exec rails secret
# 4. Never commit your .env file with actual credentials!
#
# Important Security Notes:
# - SECRET_KEY_BASE: Must be kept secret and consistent
# - ENCRYPTION_SECRET: Changing this will make existing encrypted data unreadable
# - AWS credentials: Use IAM roles in production when possible
# - Keep .env file out of version control (already in .gitignore)
#
